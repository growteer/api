type Query {
  nonce(address: String!): Nonce
  nonces: [Nonce]
}

type Mutation {
  generateNonce(input: NonceInput!): Nonce!
  login(input: LoginInput!): Session!
}

type Nonce {
  value: String!
}

input NonceInput {
  address: String!
}

type Session {
  sessionToken: String!
}

input LoginInput {
  address: String!
  message: String!
  signature: String!
}
